<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="id1"
         name="showDetails"
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="shapelang.actions.objectContribution1"
            objectClass="org.eclipse.core.resources.IFile">
         <menu
               id="shapelang.actions.menu1"
               label="ShowDetails">
            <separator
                  name="group">
            </separator>
         </menu>
         <action
               class="shapelang.myActions.ShowDetails"
               definitionId="id"
               id="shapelang.actions.action2"
               label="showDetail"
               menubarPath="shapelang.actions.menu1/group">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="najahcategory.id"
            name="Sample Category">
      </category>
      <command
            categoryId="shapelang.actions.commands.category"
            id="najahcommand.id"
            name="count">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="shapelang.actions.handlers.CountHandler"
            commandId="najahcommand.id">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="najahcommand.id"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="shapelang.actions.menus.sampleMenu"
               label="MDSE"
               mnemonic="M">
            <command
                  commandId="najahcommand.id"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="shapelang.actions.toolbars.sampleToolbar">
            <command
                  commandId="shapelang.actions.commands.sampleCommand"
                  icon="icons/sample.png"
                  id="shapelang.actions.toolbars.sampleCommand"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
